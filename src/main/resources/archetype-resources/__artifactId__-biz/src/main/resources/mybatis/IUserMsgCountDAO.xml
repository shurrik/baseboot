        INSERT INTO t_sys_usermsgcount (
	        id,
		    user_id,
		    unread,
		    create_date,
		    update_date
        ) VALUES (
         	#{ id},
       		#{ userId},
       		#{ unread},
       		sysdate(),
       		sysdate()
        )
    </insert>

